{
    "version": 3,
    "configurePresets": [
        {
            "name": "base-env",
            "hidden": true,
            "inherits": ["mixin-dirs", "mixin-ninja"],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "windows-base",
            "inherits": "base-env",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "mixin-ninja",
            "description": "Use Ninja Generator",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "mixin-dirs",
            "description": "Set default binary / install dirs",
            "hidden": true,
            "binaryDir": "${sourceDir}/_build/${presetName}",
            "installDir": "${sourceDir}/_install/${presetName}",
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "rsyncCommandArgs": [ "--copy-links", "--exclude", "_build" ]
                }
            }
        },


        {
            "name": "mixin-nosplitdebug",
            "description": "Split and package debug symbols",
            "hidden": true,
            "cacheVariables": {
                "SILKIT_PACKAGE_SYMBOLS": "OFF"
            }
        },
        {
            "name": "mixin-werror",
            "description": "Enable warnings as errors ",
            "hidden": true,
            "cacheVariables": {
                "SILKIT_WARNINGS_AS_ERRORS": "ON"
            }
        },
        {
            "name": "mixin-build-docs",
            "description": "Build SIL Kit Docs ",
            "hidden": true,
            "cacheVariables": {
                "SILKIT_BUILD_DOCS": "ON"
            }
        },
        {
            "name": "mixin-windows",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "mixin-debug",
            "description": "CMake build type Debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mixin-release",
            "description": "CMake build type Release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "mixin-relwithdebinfo",
            "description": "CMake build type RelWithDebInfo",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "mixin-toolset-v141",
            "description": "Set MSVC toolset v141",
            "hidden": true,
            "cacheVariables": {
                "SILKIT_REQUIRED_MSVC_TOOLSET_VERSION": "v141"
            },
            "toolset": {
                "value": "v141",
                "strategy": "external"
            }
        },
        {
            "name": "mixin-toolset-v140",
            "description": "Set MSVC toolset v140",
            "hidden": true,
            "cacheVariables": {
                "SILKIT_REQUIRED_MSVC_TOOLSET_VERSION": "v140"
            },
            "toolset": {
                "value": "v140",
                "strategy": "external"
            }
        },
        {
            "name": "vs141-x86-debug",
            "inherits": [ "mixin-windows", "base-env",  "mixin-toolset-v141", "mixin-debug", "mixin-werror" ],
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "vs141-x86-release",
            "inherits": [ "mixin-release", "vs141-x86-debug", "mixin-werror" ],
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "vs141-x86-relwithdebinfo",
            "inherits": [ "mixin-relwithdebinfo", "vs141-x86-debug", "mixin-werror" ],
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "vs141-x64-debug",
            "inherits": [ "vs141-x86-debug" ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "vs141-x64-release",
            "inherits": [ "mixin-release", "vs141-x64-debug", "mixin-werror" ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "vs141-x64-relwithdebinfo",
            "inherits": [ "mixin-relwithdebinfo", "vs141-x64-debug", "mixin-werror" ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },

        {
            "name": "debug",
            "inherits": [ "base-env", "mixin-debug" ]
        },
        {
            "name": "release",
            "inherits": [ "mixin-release", "debug", "mixin-build-docs", "mixin-werror" ]
        },
        {
            "name": "relwithdebinfo",
            "inherits": [ "mixin-relwithdebinfo", "debug", "mixin-build-docs", "mixin-werror" ]
        },
        {
            "name": "debug-x86",
            "inherits": ["mixin-debug","windows-base"],
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "release-x86",
            "inherits": ["mixin-release", "debug-x86", "mixin-werror"]
        },
        {
            "name": "relwithdebinfo-x86",
            "inherits": ["mixin-relwithdebinfo", "debug-x86", "mixin-werror"]
        },

        {
            "name": "addresssan",
            "inherits": [ "mixin-debug", "mixin-dirs",  "mixin-nosplitdebug" ],
            "cacheVariables": { "SILKIT_ENABLE_ASAN": "ON","SILKIT_BUILD_DASHBOARD": "OFF"  }
        },
        {
            "name": "threadsan",
            "inherits": [ "mixin-debug", "mixin-dirs", "mixin-nosplitdebug" ],
            "cacheVariables": { "SILKIT_ENABLE_THREADSAN": "ON", "SILKIT_PACKAGE_SYMBOLS": "OFF", "SILKIT_BUILD_DASHBOARD": "OFF" }
        },
        {
            "name": "ubsan",
            "inherits": [ "mixin-debug", "mixin-dirs", "mixin-nosplitdebug" ],
            "cacheVariables": { "SILKIT_ENABLE_UBSAN": "ON", "SILKIT_BUILD_DASHBOARD": "OFF" }
        }
    ],

    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo"
        },
        {
            "name": "vs141-x86-debug",
            "configurePreset": "vs141-x86-debug"
        },
        {
            "name": "vs141-x86-release",
            "configurePreset": "vs141-x86-release"
        },
        {
            "name": "vs141-x64-debug",
            "configurePreset": "vs141-x64-debug"
        },
        {
            "name": "vs141-x64-release",
            "configurePreset": "vs141-x64-release"
        },

        {
            "name": "ubsan",
            "configurePreset": "ubsan"
        },
        {
            "name": "threadsan",
            "configurePreset": "threadsan"
        },
        {
            "name": "addresssan",
            "configurePreset": "addresssan"
        }
    ],

    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo"
        },
        {
            "name": "vs141-x86-debug",
            "configurePreset": "vs141-x86-debug"
        },
        {
            "name": "vs141-x86-release",
            "configurePreset": "vs141-x86-release"
        },
        {
            "name": "vs141-x64-debug",
            "configurePreset": "vs141-x64-debug"
        },
        {
            "name": "vs141-x64-release",
            "configurePreset": "vs141-x64-release"
        },
        {
            "name": "addresssan",
            "configurePreset": "addresssan"
        },
        {
            "name": "threadsan",
            "configurePreset": "threadsan"
        },
        {
            "name": "ubsan",
            "configurePreset": "ubsan"
        }
    ]
}
